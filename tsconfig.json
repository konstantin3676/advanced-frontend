{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./webpack.config.ts",
    "./config/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
